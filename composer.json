    "keywords": ["VAT", "Tax", "EU MOSS", "VAT ID", "Tax calculation", "VAT calculation", "Cashier"],
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "m.pociot@gmail.com"
        },
        {
